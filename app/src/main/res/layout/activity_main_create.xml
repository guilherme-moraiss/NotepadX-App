<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/main_create"
    tools:context=".MainActivity_create">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_create"
        android:padding="20dp">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="NotepadX"
            android:textColor="@color/deep_blue"
            android:textSize="35sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Criar Conta"
            android:textColor="@color/deep_blue"
            android:textSize="25sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/account"
            android:layout_marginTop="33dp"
            android:background="@color/deep_blue"
            android:drawableLeft="@drawable/baseline_person_outline_24"
            android:drawablePadding="20dp"
            android:hint="Nome"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:padding="20dp" />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_marginTop="10dp"
            android:background="@color/deep_blue"
            android:drawableLeft="@drawable/baseline_password_24"
            android:drawableRight="@drawable/baseline_remove_red_eye_24"
            android:drawablePadding="20dp"
            android:hint="Palavra-passe"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:padding="20dp" />


        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_marginTop="10dp"
            android:background="@color/deep_blue"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="20dp"
            android:hint="Email"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:padding="20dp" />


        <AutoCompleteTextView
            android:id="@+id/nationality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Email"
            android:layout_marginTop="10dp"
            android:background="@color/deep_blue"
            android:drawableLeft="@drawable/baseline_outlined_flag_24"
            android:drawablePadding="20dp"
            android:hint="Nacionalidade"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:padding="20dp" />


        <Button
            android:id="@+id/loginbtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Criar Conta"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_below="@id/nationality"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_margin="10dp"/>


        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginbtn"
            android:layout_centerInParent="true"
            android:textColor="@android:color/holo_red_light"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/forgotpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tenho conta!"
            android:textSize="20sp"
            android:textColor="@color/deep_blue"
            android:layout_below="@id/errorMessage"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp" />

    </RelativeLayout>
</ScrollView>

